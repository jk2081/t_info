<h1>Listing section_vacancies</h1>

<table>
  <thead>
    <tr>
      <th>Num plants</th>
      <th>Date of count</th>
      <th>Vacancy</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @section_vacancies.each do |section_vacancy| %>
      <tr>
        <td><%= section_vacancy.num_plants %></td>
        <td><%= section_vacancy.date_of_count %></td>
        <td><%= section_vacancy.vacancy %></td>
        <td><%= section_vacancy.section %></td>
        <td><%= link_to 'Show', section_vacancy %></td>
        <td><%= link_to 'Edit', edit_section_vacancy_path(section_vacancy) %></td>
        <td><%= link_to 'Destroy', section_vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

