<%= form_for @section_yield, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :budget, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :budget, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :actual, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :actual, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :year, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  section_yields_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
